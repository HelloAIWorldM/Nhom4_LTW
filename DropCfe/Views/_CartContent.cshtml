@using DropCfe.Models
@{
    GioHang x = Session["giohang"] as GioHang;
    GioHang gh = ViewData["SP"] as GioHang;
    if (gh == null)
    {
        gh = new GioHang();
        ViewData["SP"] = gh;
    }
}
@foreach (ctDonHang i in gh.ChonSP.Values)
{
    <div class="item-display">
        <div class="cart-item">
            <img src="@DungChung.getImageproducts(i.maSP)" />
            <div>
                <h3>
                    <span class="span-primary">@DungChung.getNameproducts(i.maSP)</span>
                </h3>
                <h4>@i.giaBan</h4>
                @using (Html.BeginForm("XoaItem", "Menu", FormMethod.Post))
                {
                    <input type="hidden" name="maSP" value="@i.maSP" />
                    <button class="remove-item">Remove</button>
                }

            </div>
            <div>
                @using (Html.BeginForm("TangSoLuong", "Menu", FormMethod.Post))
                {
                    <input type="hidden" name="maSP" value="@i.maSP" />
                    <div class="itemUp">
                        <svg class="svg-inline--fa fa-chevron-up fa-w-14" aria-hidden="true" focusable="false"
                             data-prefix="fas" data-icon="chevron-up" role="img" xmlns="http://www.w3.org/2000/svg"
                             viewBox="0 0 448 512" data-fa-i2svg>
                            <path fill="currentColor" d="M240.971 130.524l194.343 194.343c9.373 9.373 9.373 24.569 0 33.941l-22.667 22.667c-9.357 9.357-24.522 9.375-33.901.04L224 227.495 69.255 381.516c-9.379 9.335-24.544 9.317-33.901-.04l-22.667-22.667c-9.373-9.373-9.373-24.569 0-33.941L207.03 130.525c9.372-9.373 24.568-9.373 33.941-.001z">
                            </path>
                        </svg>
                    </div>
                }
                <p class="">@i.soLuong</p>
                @using (Html.BeginForm("GiamSoLuong", "Menu", FormMethod.Post))
                {
                    <input type="hidden" name="maSP" value="@i.maSP" />
                    <div class="itemDown">
                        <svg class="svg-inline--fa fa-chevron-down fa-w-14" aria-hidden="true" focusable="false"
                             data-prefix="fas" data-icon="chevron-down" role="img" xmlns="http://www.w3.org/2000/svg"
                             viewBox="0 0 448 512 " data-fa-i2svg>
                            <path fill="currentColor" d="M207.029 381.476L12.686 187.132c-9.373-9.373-9.373-24.569 0-33.941l22.667-22.667c9.357-9.357 24.522-9.375 33.901-.04L224 284.505l154.745-154.021c9.379-9.335 24.544-9.317 33.901.04l22.667 22.667c9.373 9.373 9.373 24.569 0 33.941L240.971 381.476c-9.373 9.372-24.569 9.372-33.942 0z"></path>
                        </svg>

                    </div>
                }
            </div>
        </div>
    </div>
}
    <div class="total">@Model.tongtienGH()</div>